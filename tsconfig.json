{
	"compilerOptions": {
		"strictFunctionTypes": false,
		"strictPropertyInitialization": false,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/modules/home/components/button.js",
		"src/modules/home/screens/HomeScreen.tsx",
		"src/modules/home/components/Hero.js",
		"src/modules/favorites/screens/FavoritesScreen.TSX"
, "src/modules/subscriptions/screen/Pricing.js"	],
	"exclude": ["node_modules"]
}
